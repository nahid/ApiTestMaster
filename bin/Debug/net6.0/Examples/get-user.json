{
  "name": "Get User API Test",
  "description": "Tests the user retrieval endpoint",
  "uri": "https://jsonplaceholder.typicode.com/users/1",
  "method": "GET",
  "headers": {
    "Accept": "application/json"
  },
  "tests": [
    {
      "name": "Status code is 200",
      "assertion": "status == 200"
    },
    {
      "name": "Response contains user information",
      "assertion": "response.body contains \"name\""
    },
    {
      "name": "Content-Type header is application/json",
      "assertion": "response.headers.Content-Type contains \"application/json\""
    },
    {
      "name": "User's name is correct",
      "assertion": "response.body.$.name == \"Leanne Graham\""
    },
    {
      "name": "Response time is acceptable",
      "assertion": "response.time < 2000"
    }
  ]
}
