{
  "name": "Sample POST API",
  "description": "Sample API for testing POST requests",
  "uri": "{{baseUrl}}/posts",
  "method": "POST",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "payload": {
    "title": "Test Post",
    "body": "This is a test post created by Apify",
    "userId": "{{userId}}"
  },
  "payloadType": "Json",
  "tests": [
    {
      "name": "Status code is 201",
      "assertions": [
        {
          "type": "StatusCode",
          "value": "201"
        }
      ]
    },
    {
      "name": "Response contains id",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "id",
          "exists": true
        }
      ]
    },
    {
      "name": "Title is correct",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "title",
          "value": "Test Post"
        }
      ]
    },
    {
      "name": "Body is correct",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "body",
          "value": "This is a test post created by Apify"
        }
      ]
    },
    {
      "name": "User ID is correct",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "userId",
          "value": "{{userId}}"
        }
      ]
    }
  ]
}