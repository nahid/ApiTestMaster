{
  "name": "Sample POST API",
  "description": "Sample API for testing POST requests",
  "uri": "{{baseUrl}}/posts",
  "method": "POST",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "payload": {
    "title": "Test Post",
    "body": "This is a test post created by Apify",
    "userId": "{{userId}}"
  },
  "payloadType": "Json",
  "tests": [
    {
      "name": "Status code is 201",
      "assertions": [
        {
          "type": "StatusCode",
          "value": "201"
        }
      ]
    },
    {
      "name": "Response time is acceptable",
      "assertions": [
        {
          "type": "ResponseTimeBelow",
          "value": "5000"
        }
      ]
    },
    {
      "name": "Response contains ID property",
      "assertions": [
        {
          "AssertType": "ContainsProperty",
          "Property": "id"
        }
      ]
    },
    {
      "name": "Response contains title property",
      "assertions": [
        {
          "AssertType": "ContainsProperty",
          "Property": "title",
          "ExpectedValue": "Test Post" 
        }
      ]
    },
    {
      "name": "Response contains body property",
      "assertions": [
        {
          "AssertType": "ContainsProperty",
          "Property": "body",
          "ExpectedValue": "This is a test post created by Apify"
        }
      ]
    },
    {
      "name": "Response contains userId property",
      "assertions": [
        {
          "AssertType": "ContainsProperty",
          "Property": "userId",
          "ExpectedValue": "{{userId}}"
        }
      ]
    }
  ]
}