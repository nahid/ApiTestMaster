{
  "name": "Get User with Environment Variables",
  "description": "This test demonstrates using environment variables in API requests",
  "uri": "{{baseUrl}}/users/{{userId}}",
  "method": "GET",
  "headers": {
    "Accept": "application/json",
    "x-api-key": "{{apiKey}}"
  },
  "payload": null,
  "tests": [
    {
      "name": "Status code is 200",
      "assertions": [
        {
          "type": "StatusCode",
          "value": "200"
        }
      ]
    },
    {
      "name": "User id matches environment variable",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "id",
          "value": "{{userId}}"
        }
      ]
    },
    {
      "name": "Response time is acceptable",
      "assertions": [
        {
          "type": "ResponseTimeBelow",
          "value": "{{timeout}}"
        }
      ]
    }
  ]
}