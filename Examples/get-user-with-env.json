{
  "Name": "Get User API Test with Environment Variables",
  "Uri": "{{baseUrl}}/users/{{userId}}",
  "Method": "GET",
  "Headers": {
    "Accept": "application/json"
  },
  "Tests": [
    {
      "Description": "Status code is 200",
      "AssertType": "StatusCode",
      "ExpectedValue": "200"
    },
    {
      "Description": "Response contains user information",
      "AssertType": "ContainsProperty",
      "ExpectedValue": "id"
    },
    {
      "Description": "Content-Type header is application/json",
      "AssertType": "HeaderContains",
      "Property": "Content-Type",
      "ExpectedValue": "application/json"
    },
    {
      "Description": "User's name is present",
      "AssertType": "ContainsProperty",
      "ExpectedValue": "name"
    },
    {
      "Description": "Response time is acceptable",
      "AssertType": "ResponseTimeBelow",
      "ExpectedValue": "{{timeout}}"
    }
  ]
}