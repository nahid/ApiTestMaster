{
  "name": "File Upload Test",
  "description": "Example API for testing file upload functionality",
  "uri": "https://httpbin.org/post",
  "method": "POST",
  "headers": {
    "Accept": "application/json"
  },
  "payload": null,
  "payloadType": "FormData",
  "formData": {
    "fields": {
      "name": "test-file-upload",
      "description": "This is a test file upload"
    },
    "files": [
      {
        "field": "file",
        "path": "Examples/sample-image.txt",
        "contentType": "text/plain"
      }
    ]
  },
  "tests": [
    {
      "name": "Status code is 200",
      "assertions": [
        {
          "type": "StatusCode",
          "value": "200"
        }
      ]
    },
    {
      "name": "Response contains file field",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "form.name",
          "value": "test-file-upload"
        }
      ]
    },
    {
      "name": "File was uploaded",
      "assertions": [
        {
          "type": "ContainsProperty",
          "property": "files.file",
          "exists": true
        }
      ]
    }
  ]
}